@model CompetitionModel

@{
    ViewData["Title"] = "Edit";
}

<h3>Редактирование</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label">Название</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label">Дата проведения</label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IppodromId" class="control-label">Ипподром</label>
                <select asp-for="IppodromId" class ="form-control" asp-items="ViewBag.Ippodroms"></select>
                <span asp-validation-for="IppodromId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PublicationDate" class="control-label">Дата публикации</label>
                <input asp-for="PublicationDate" class="form-control" />
                <span asp-validation-for="PublicationDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Описание</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div><label for="file" class="control-label">Фото</label></div>
                
                @if (Model.ImageData != null && Model.ImageData.Length > 0)
                {
                    <img src="@Url.Action("GetImage", "Home", new { id = Model.Id })", class="img-thumbnail"/>
                }
                else
                {
                    <p>Изображение не найдено</p>
                    <input type="file" class="form-control-file" id="file" name="file"> <!--TODO THIS SHIT-->
                }
               
            </div>
            <div class="form-group">
                <label asp-for="Recruiting" class="control-label">Набор ведется</label>
                <input asp-for="Recruiting" class="form-check-input" type="checkbox">
                <span asp-validation-for="Recruiting" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Обратно</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
