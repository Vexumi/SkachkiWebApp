@model HorseModel

@{
    ViewData["Title"] = "Details";
}

<h1>Дополнительно</h1>
<hr />
<div>
    <dl class="row">
        <dt class = "col-sm-2">
            Уникальный номер
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            Кличка
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nickname)
        </dd>
        <dt class = "col-sm-2">
            Пол
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Sex)
        </dd>
        <dt class = "col-sm-2">
            Дата рождения
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DOB)
        </dd>
        <dt class = "col-sm-2">
            Владелец лошади
        </dt>
        <dd class = "col-sm-10">
            <a asp-area="admin" asp-controller="HorseOwners" asp-action="Details" asp-route-id="@Model.HorseOwnerId">@Html.DisplayFor(model => model.HorseOwner.Name)</a>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Редактировать</a> |
    <a asp-action="Index">Обратно к списку</a>
</div>