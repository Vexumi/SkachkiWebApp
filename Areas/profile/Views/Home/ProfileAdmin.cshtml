@model SkachkiWebApp.Areas.user.Models.UserModel

@{
    ViewData["Title"] = "Admin`s profile";
}

<section>
  <div class="container py-5">
    <div class="row">
      <div class="col-lg-4">
        <div class="card mb-4">
          <div class="card-body text-center">
            <img src="/Imgs/ava_admin.png" alt="avatar"
              class="rounded-circle img-fluid" style="width: 150px;">
            <h5 class="my-3">Админ</h5>
            <div class="d-flex justify-content-center mb-2">
                <a asp-area="user" asp-controller="Home" asp-action="Logout" type="button" class="btn btn-primary">Выйти</a>
            </div>
          </div>
        </div>
      </div>
      <div class="col-lg-8">
        <div class="card mb-4">
          <div class="card-body">
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Электронная почта</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">@Model.Email</p>
              </div>
            </div>
            <hr />
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Дата создания аккаунта</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">@Model.CreationDate</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>