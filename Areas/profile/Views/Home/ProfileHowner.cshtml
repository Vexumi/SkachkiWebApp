@model SkachkiWebApp.Areas.profile.Models.HownerViewModel
@{
    ViewData["Title"] = "Horse owner`s profile";
}

<h2>Профиль</h2>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            ФИО:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt class = "col-sm-2">
            Адрес:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>

        <dt class = "col-sm-2">
            Номер телефона:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Phone)
        </dd>
    </dl>
</div>

<hr />
<h2>Лошади</h2>
<table class="table">
    <thead>
        <tr>
            <th>
                Уникальный номер
            </th>
            <th>
                Кличка
            </th>
            <th>
                Пол
            </th>
            <th>
                Дата рождения
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Horses)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nickname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sex)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DOB)
                </td>
                <td>
                    <a asp-area="profile" asp-controller="Home" asp-action="EditHorse" asp-route-id="@item.Id">Редактировать</a> |
                    <a asp-area="profile" asp-controller="Home" asp-action="DeleteHorse" asp-route-id="@item.Id">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<h2>Результаты соревнований</h2>
<table class="table">
    <thead>
        <tr>
            <th>
                Название
            </th>
            <th>
                Дата
            </th>
            <th>
                Кличка лошади
            </th>
            <th>
                Жокей
            </th>
            <th>
                Место
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item2 in Model.Competitions)
        {
                <tr>
                    <td>
                    @Html.DisplayFor(modelItem => item2.Competition.Name)
                    </td>
                    <td>
                    @Html.DisplayFor(modelItem => item2.Competition.Date)
                    </td>
                    <td>
                    @Html.DisplayFor(modelItem => item2.Horse.Nickname)
                    </td>
                    <td>
                    @Html.DisplayFor(modelItem => item2.Jokey.Name)
                    </td>
                    <td>
                    @Html.DisplayFor(modelItem => item2.Result)
                    </td>
                </tr>
        }
    </tbody>
</table>