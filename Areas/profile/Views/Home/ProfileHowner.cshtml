@model HorseOwnerModel
@{
    ViewData["Title"] = "Horse owner`s profile";
}

<h1>Профиль</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            ФИО:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt class = "col-sm-2">
            Адрес:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>

        <dt class = "col-sm-2">
            Номер телефона:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Phone)
        </dd>
    </dl>
</div>
