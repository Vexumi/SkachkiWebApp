@model SkachkiWebApp.Areas.profile.Models.HownerViewModel
@{
    ViewData["Title"] = "Horse owner`s profile";
}


<section>
  <div class="container py-5">
    <div class="row">
      <div class="col-lg-4">
        <div class="card mb-4">
          <div class="card-body text-center">
            <img src="/Imgs/ava_howner.png" alt="avatar"
              class="rounded-circle img-fluid" style="width: 150px;">
            <h5 class="my-3">@Html.DisplayFor(model => model.Name)</h5>
            <p class="text-muted mb-1">Владелец лошадей</p>
            <div class="d-flex justify-content-center mb-2">
                <a asp-area="user" asp-controller="Home" asp-action="Logout" type="button" class="btn btn-primary">Выйти</a>
            </div>
          </div>
        </div>
      </div>
      <div class="col-lg-8">
        <div class="card mb-4">
          <div class="card-body">
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">ФИО</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">@Html.DisplayFor(model => model.Name)</p>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Электронная почта</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">@Html.DisplayFor(model => model.Email)</p>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Адрес</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">@Html.DisplayFor(model => model.Address)</p>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Номер телефона</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">@Html.DisplayFor(model => model.Phone)</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="card mb-4">
        <div class="card-header"> 
            <h4 class="text-center text-muted mb-0">Результаты соревнований</h4>
        </div>
        <div class="card-body">
        <table class="table">
            <thead>
                <tr>
                    <th class="text-muted mb-0">
                        Название
                    </th>
                    <th class="text-muted mb-0">
                        Дата
                    </th>
                    <th class="text-muted mb-0">
                        Кличка лошади
                    </th>
                    <th class="text-muted mb-0">
                        Жокей
                    </th>
                    <th class="text-muted mb-0">
                        Место
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item2 in Model.Competitions)
                {
                 <tr>
                <td>
                    @Html.DisplayFor(modelItem => item2.Competition.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item2.Competition.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item2.Horse.Nickname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item2.Jokey.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item2.Result)
                </td>
                </tr>
                }
            </tbody>
        </table>
        </div>
    </div>

    <div class="card mb-4">
    <div class="card-header"> 
        <h4 class="text-center text-muted mb-0">Лошади</h4>
    </div>
    <div class="card-body">
    <table class="table">
        <thead>
            <tr>
            <th class="text-muted mb-0">
                Уникальный номер
            </th>
            <th class="text-muted mb-0">
                Кличка
            </th>
            <th class="text-muted mb-0">
                Пол
            </th>
            <th class="text-muted mb-0">
                Дата рождения
            </th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item2 in Model.Horses)
        {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item2.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item2.Nickname)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item2.Sex)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item2.DOB)
                    </td>
                    <td>
                        <a asp-area="profile" asp-controller="Home" asp-action="EditHorse" asp-route-id="@item2.Id">Редактировать</a> |
                        <a asp-area="profile" asp-controller="Home" asp-action="DeleteHorse" asp-route-id="@item2.Id">Удалить</a>
                    </td>
                </tr>
        }
        </tbody>
    </table>
    </div>
</div>
</div>
</section>