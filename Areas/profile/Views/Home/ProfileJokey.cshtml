@model SkachkiWebApp.Areas.profile.Models.JokeyViewModel

@{
    ViewData["Title"] = "Jokey`s profile";
}

<h1>Профиль</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            ФИО:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt class = "col-sm-2">
            Дата рождения:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DOB)
        </dd>

        <dt class = "col-sm-2">
            Рейтинг:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Rating)
        </dd>
    </dl>
</div>

<h2>Результаты соревнований</h2>
<table class="table">
    <thead>
        <tr>
            <th>
                Название
            </th>
            <th>
                Дата
            </th>
            <th>
                Кличка лошади
            </th>
            <th>
                Место
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item2 in Model.Competitions)
        {
            <tr>
                <td>
            @Html.DisplayFor(modelItem => item2.Competition.Name)
                </td>
                <td>
            @Html.DisplayFor(modelItem => item2.Competition.Date)
                </td>
                <td>
            @Html.DisplayFor(modelItem => item2.Horse.Nickname)
                </td>
                <td>
            @Html.DisplayFor(modelItem => item2.Result)
                </td>
            </tr>
        }
    </tbody>
</table>