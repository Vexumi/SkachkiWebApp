@model SkachkiWebApp.Areas.user.Models.LoginModel
@{
    ViewData["Title"] = "Login - RoyaltyHorse";
}

<main class="form-signin w-100 m-auto">
  <form asp-action="Login">
      <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <img class="mb-4" src="/docs/5.2/assets/brand/bootstrap-logo.svg" alt="" width="72" height="57">
    <h1 class="h3 mb-3 fw-normal">Пожалуйста, войдите</h1>

    <div class="form-floating">
      <input asp-for="Email" type="email" class="form-control" id="floatingInput" placeholder="name@example.com" />
      <label for="floatingInput">Адрес эл. почты</label>
    </div>
    <div class="form-floating">
      <input asp-for="Password" type="password" class="form-control" id="floatingPassword" placeholder="Пароль" />
      <label for="floatingPassword">Пароль</label>
    </div>

    <div class="checkbox mb-3">
      <label>
        <input type="checkbox" value="remember-me"> Запомнить меня
      </label>
    </div>
    <button class="w-100 btn btn-lg btn-primary" type="submit">Войти</button>
  </form>
</main>