@{
    ViewData["Title"] = "Access denied";
}
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="error-template">
                <h2>Oops! Ошибка 403</h2>
                <div class="error-details h4">
                    Доступ к запрашиваемому ресурсу запрещен!
                </div>
                <div class="error-actions">
                    <a asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg">На главную</a>
                </div>
            </div>
        </div>
    </div>
</div>
